<button type="button" class="close fui-cross close-messages" data-dismiss="modal"></button>

<div class="row-fluid">
  <div class="span10 offset1 text-center">
    <br>
    <h3>Received Messages</h3>
  </div>
</div>
<div class="row-fluid">
  <div class="span10 offset1 text-center">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Sender</th>
          <th>Sent</th>
          <th>Message</th>
          <th>Read?</th>
        </tr>
      </thead>
      <tbody>
        <% received.each(function(message) { %>
          <tr>
            <td>
              <a class="show-user-profile" data-id="<%= message.get('sender').id %>">
                <%= message.get('sender').escape('name') %>
              </a>
            </td>
            <td><%= message.escape('created_at').substr(0, 10) %></td>
            <td>
              <a class="view-message" data-id="<%= message.id %>">
                <%= message.escape('body').substr(0, 20) %>
              </a>
            </td>
            <td>
              <%= message.get('read') ? "Read" : "Unread" %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <br>
    <br>
    <div class="text-center">
      <button class="btn close-messages">Close Messages</button>
    </div>
    <br>
    <br>
  </div>
</div>